<% if shop.favorited_by?(current_user) %>
<p>
  <%= link_to shop_favorite_path(shop), method: :delete do %>
    <i class="fa-solid fa-heart"></i> <%= shop.favorites.count %>
  <% end %>
<% else %>
  <%= link_to shop_favorite_path(shop), method: :post do %>
    <i class="fa-regular fa-heart"></i> <%= shop.favorites.count %>
  <% end %>
</p>
<% end %>
