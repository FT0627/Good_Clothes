<div class="container main-content py-5">
  <div class="ml-2">
    <% if @shop.errors.any? %>
      <%= @shop.errors.count %>件のエラーが発生しました
      <ul>
        <% @shop.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="card w-75 mx-auto my-4 shadow-lg text-center">
  <h2 class="p-3"><strong>店舗登録</strong></h2>

  <%= render partial: "form", locals: {shop: @shop} %>
  <div class="mb-3">
    <%= link_to "店舗一覧へ戻る", shops_path, class: "badge badge-light" %>｜
    <%= link_to "投稿する", new_item_path, class: "badge badge-light" %>
  </div>
  </div>
</div>