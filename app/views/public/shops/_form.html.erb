  <%= form_with model: @shop do |f| %>
    <div class="field mb-3">
    <%= f.label :name, "店名(20字以内)" %><br />
      <%= f.text_field :name, autofocus: true, style: "width:50%", placeholder: "○○ショップ"  %>
    </div>

    <div class="field mb-3">
      <label>住所</label><br />
      <%= f.select :prefecture, Shop.prefectures.keys ,{class: 'hoge'} %>
      <%= f.text_field :address, autofocus: true, style: "width:50%", placeholder: "大阪府大阪市○○―○―○(建物名不要)"  %>
    </div>

    <div class="field mb-3">
      <%= f.label :shop_image, "店舗外観(任意)" %><br />
      <%= f.file_field :shop_image, placeholder: "店舗画像", accept: "image/*" %>
    </div>


    <div class="field mb-3">
      <%= f.label :discription, "店舗説明(60字以内・任意)" %><br />
      <%= f.text_area :discription, style: "width:75%", placeholder: "ストリートウェアが充実"  %>
    </div>

    <div class="actions mb-3">
      <% if f.object.new_record? %>
      <%= f.submit "登録", class: "btn btn-primary" %>
      <% else %>
      <%= f.submit "店舗情報を編集", class: "btn btn-primary" %>
      <% end %>
    </div>
  <% end %>
