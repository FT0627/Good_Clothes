<div class="container py-5">
  <div class="card w-75 mx-auto my-4 shadow-lg text-center">
  <h2 class="p-3"><strong>店舗登録</strong></h2>
  <%= form_with model: @shop, url: shop_path(@shop), metod: :patch do |f| %>
    <div class="field mb-3">
      <%= f.label :name, "店名" %><br />
      <%= f.text_field :name, autofocus: true, style: "width:50%", placeholder: "店名"  %>
    </div>

    <div class="field mb-3">
      <label>住所</label><br />
      <%= f.select :prefecture, Shop.prefectures.keys, {} ,{class: 'hoge'} %>
      <%= f.text_field :address, autofocus: true, style: "width:50%", placeholder: "住所"  %>
    </div>

    <div class="field mb-3">
      <%= f.label :shop_image, "店舗外観(任意)" %><br />
      <%= f.file_field :shop_image, placeholder: "店舗画像", accept: "image/*" %>
    </div>


    <div class="field mb-3">
      <%= f.label :discription, "店舗説明" %><br />
      <%= f.text_area :discription, style: "width:75%", placeholder: "説明"  %>
    </div>

    <div class="actions mb-3">
      <%= f.submit "保存", class: "btn btn-primary" %>
    </div>
    <div class="actions mb-3">
      <%= link_to "削除", shop_path(@shop), method: :delete, "data-confirm" => "この店舗を削除しますか？", class: "btn btn-danger mb-4" %>
    </div>
    
  <% end %>
  </div>
</div>