<%= render partial: "public/users/user_info", locals: {user: @shop.user} %>

<div class="container">
  <h4 class="my-3"><strong>店舗情報</strong></h4>
  <% if @shop.user_id == current_user.id %>
    <%= link_to "編集", edit_shop_path(@shop), class: "btn btn-primary" %>
  <% end %>
  <div class="row p-3 d-flex justify-content-center">
    <div class="col-lg-5">
      <div>
        <%= render partial: "map", locals: {shop: @shop} %>
      </div>
    </div>
    <div class="col-lg-5">
      <table class="table">
        <tr>
          <th>name</th>
          <td>
            <h4><%= @shop.name %></h4>
          </td>
        </tr>
        <tr>
          <th>address</th>
          <td><%= @shop.full_address %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @shop.discription %></td>
        </tr>
      </table>
    </div>
  </div>
</div>