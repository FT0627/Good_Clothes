<div class="container main-content py-5">
  <div class="ml-2">
    <% if @item.errors.any? %>
      <%= @item.errors.count %>件のエラーが発生しました
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="card w-75 mx-auto my-4 shadow-lg text-center">
  <h2 class="p-3"><strong>投稿</strong></h2>

  <%= render partial: 'form',  locals: {item: @item, colors: @colors, tag_list: @tag_list} %>

  <div>
    <%= link_to "削除", item_path(@item), method: :delete, data: {confirm: "本当にこの投稿を削除しますか？"}, class: "btn btn-danger" %>
  </div>
  </div>
</div>