<%= render partial: "user_info", locals: {user: @user} %>

<div class="container main-content">
  <div class="row">
    <%= render partial: "public/homes/sidebar", locals: {tags: @tags, categories: @categories} %>
    <div class="col-lg-9 mt-3">
      <div class="row">

        <div class="col-lg-4 p-3">
          <div class="card" style="width: 16rem;">
            <%= image_tag @user.get_profile_image(300,300) %>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <div class="row">
                  <h4><strong><%= @user.name %></strong></h4>
                </div>
              </li>
              <li class="list-group-item">
                <div class="row">
                  <p class="mr-3">フォロー</p>
                  <%= link_to user_followings_path(@user) do %>
                    <%= @user.followings.count %>
                  <% end %>
                </div>
              </li>
              <li class="list-group-item">
                <div class="row">
                  <p class="mr-3">フォロワー</p>
                  <%= link_to user_followers_path(@user) do %>
                    <%= @user.followers.count %>
                  <% end %>
                </div>
              </li>
            </ul>
            <div class="card-body">
              <%= render partial: "public/relationships/btn", locals: {user: @user} %>
            </div>
          </div>
        </div>

        <div class="col-lg-8">
          <div class="row p-3 mr-3 border-top">
            <% @items.each do |item| %>
              <div class="col-lg-5 mx-auto">
                <%= link_to item_path(item) do %>
                  <%= image_tag item.item_images[0], size: "200x200", class: "mb-2 btn btn-outline-light user_item" %>
                <% end %>
              </div>
            <% end %>
          </div>
          <%= paginate @items %>
        </div>

      </div>
    </div>
  </div>
</div>
