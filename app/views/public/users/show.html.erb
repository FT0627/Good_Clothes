<%= render partial: "head", locals: {user: @user} %>

<div class="container">
<h3 class="my-3 page-title">ユーザー情報</h3>
    <div class="row d-flex justify-content-center">
      <div class="col-lg-4 mb-3">
        <div class="card" style="width: 18rem;">
          <%= image_tag @user.get_profile_image(300,300) %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <div class="row">
                <p class="mr-3">ニックネーム</p>
                <p><%= @user.name %></p>
              </div>
            </li>
            <li class="list-group-item">
              <div class="row">
                <p class="mr-3">フォロー</p>
                <%= link_to user_followings_path(@user) do %>
                  <%= @user.followings.count %>
                <% end %>
              </div>
            </li>
            <li class="list-group-item">
              <div class="row">
                <p class="mr-3">フォロワー</p>
                <%= link_to user_followers_path(@user) do %>
                  <%= @user.followers.count %>
                <% end %>
              </div>
            </li>
          </ul>
          <div class="card-body">
            <%= render partial: "public/relationships/btn", locals: {user: @user} %>
          </div>
        </div>
      </div>
      <div class="col-lg-7">
        <div class="row d-flex flex-wrap">
          <% @user.items.each do |item| %>
          <div class="col-lg-6 mb-3">
            <%= link_to item_path(item) do %>
            <%= image_tag item.item_images[0], size: "250x250", class: "mb-2", style: "object-fit: cover;" %>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
</div>
