    <div class="col-lg-3 p-3 text-center">
      <table class="table table-bordered">
        <thead class="sidebar_title">
          <tr>
            <th>
              <i class="fa-solid fa-tag"></i>
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <% tags.each do |tag| %>
              <div class="tag-content d-flex flex-wrap">
                <% if tag.items.present? %>
                    <i class="fa-solid fa-hashtag ml-1 d-inline-flex">
                      <% if user_signed_in? %>
                        <%= link_to tag.name, root_path(tag_id: tag.id) %>
                        <%= "(#{tag.items.count})" %>
                      <% else %>
                        <%= link_to tag.name, admin_items_path(tag_id: tag.id) %>
                        <%= "(#{tag.items.count})" %>
                      <% end %>
                    </i>
                <% end %>
              <% end %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
      <table class="table table-bordered">
        <thead class="sidebar_title">
          <tr>
            <th>
              <i class="fa-solid fa-list"></i>
            </th>
          </tr>
        </thead>
        <tbody>
          <% categories.each do |category| %>
          <tr>
            <td>
              <% if user_signed_in? %>
                <%= link_to category.name, root_path(category_id: category.id), class: "text-dark" %>
              <% else %>
                <%= link_to category.name, admin_items_path(category_id: category.id), class: "text-dark" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
