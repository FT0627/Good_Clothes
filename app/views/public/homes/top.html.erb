<div>
  <%= flash[:notice] %>
</div>

<div class="container text-center">
  <div class="row ">
    <div class="col-lg-2 side-bar">
      <h3 class="my-3">タグ一覧</h3>
      <% @tags.each do |tag| %>
      <div class="col-lg-4">
        <%= link_to tag.name, root_path(tag_id: tag.id) %>
        <%= "(#{tag.items.count})" %>
      </div>
      <% end %>
    </div>
    <div class="col-lg-10">
      <h1 class="my-3">投稿一覧</h1>
      <div class="row">
        <% @items.each do |item| %>
        <div class="col-lg-3">
          <%= link_to item_path(item) do %>
          <%= image_tag item.item_images[0], size: "180x240" %>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
