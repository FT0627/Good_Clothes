<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-6">
      <table class="table">
        <% user.each do |user| %>
        <tr>
          <td>
            <%= link_to admin_user_path(user) do %>
              <%= image_tag user.get_profile_image(100,100) %>
            <% end %>
          </td>
          <td>
            <h5><%= link_to user.name, admin_user_path(user) %></h5>
          </td>
          <td>
            <p>
              フォロー<%= link_to user.followings.count, admin_user_followings_path(user) %>
            </p>
          </td>
          <td>
            <p>
              フォロワー<%= link_to user.followers.count, admin_user_followers_path(user) %>
            </p>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>