<div class="container">
  <div class="w-50">
    <h1 class="my-3"><strong>カラー</strong></h1>
    <%= form_with model: @color, url: admin_colors_path do |f| %>
      <h4 class="mb-3">カテゴリー名</h4>
      <%= f.text_field :name, autofocus: true %>
      <%= f.submit '新規登録' %>
    <% end %>

    <table class="mt-3 table">
      <thead>
        <tr>
          <th><h5>カラー欄</h5></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @colors.each do |color| %>
        <tr>
          <td><%= color.name %></td>
          <td><%= link_to '削除', admin_color_path(color), method: :delete, "data-confirm" => "このカラーを削除しますか？", class: "btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>