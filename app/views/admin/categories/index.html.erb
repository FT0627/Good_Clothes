<div class="container">
  <div class="w-50">
    <h1 class="my-3"><strong>カテゴリー</strong></h1>
    <%= form_with model: @category, url: admin_categories_path do |f| %>
      <h4 class="mb-3">カテゴリー名</h4>
      <%= f.text_field :name, autofocus: true %>
      <%= f.submit '新規登録' %>
    <% end %>

    <table class="mt-3 table">
      <thead>
        <tr>
          <th><h5>カテゴリー欄</h5></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to '編集', edit_admin_category_path(category), class: "btn btn-primary" %></td>
          <td><%= link_to '削除', admin_category_path(category), method: :delete, "data-confirm" => "このカテゴリーを削除しますか？", class: "btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>