<div class="container">
  <h2 class="my-3 mb-3">投稿内容</h2>
  <%= link_to "削除", admin_item_path(@item), method: :delete, "data-confirm" => "この投稿を本当に削除しますか？", class: "btn btn-danger my-3" %>
  <div class="row mb-5">
    <h3><labal><strong>店名：</strong></labal>
    　<%= link_to @item.shop.name, shop_path(@item.shop_id) %>
    </h3>
  </div>

  <div class="row ml-3">
    <div class="col-lg-4 mb-3">
      <h3><label><strong>カテゴリー：</strong></label>
      　<%= @item.category.name %>
      </h3>
      <h3><label><strong>カラー：</strong></label>
        <% @item.colors.each do |color| %>
          <%= color.name %>
        <% end %>
      </h3>
      <div>
        <% @tag.each do |tag| %>
          #<%= link_to tag.name, root_path(tag_id: tag.id) %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-5">
      <% @item.item_images.each do |item_image| %>
        <%= image_tag item_image, size: "180x240" %>
      <% end %>
    </div>
    <div class="col-lg-3">コメント</div>
  </div>
</div>