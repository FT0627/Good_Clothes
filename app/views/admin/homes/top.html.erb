<div class="container main-content">
  <dvi class="contents-title text-center">
    <h3 class="my-3">ユーザー</h3>
    <div class="d-flex justify-content-center flex-wrap">
      <% @users.each do |user| %>
        <div class="card mr-2 mb-2">
          <%= link_to admin_user_path(user) do %>
            <%= image_tag user.get_profile_image(250,250) %>
          <% end %>
          <div class="card-body">
            <p class="card-title text-nowrap text-truncate"><%= link_to user.name, admin_user_path(user) %></p>
              <%= link_to "アカウント削除", admin_user_path(user.id), method: :delete, "data-confirm" => "このユーザーを本当に削除しますか？", class: "btn btn-danger", remote: true %>
          </div>
        </div>
      <% end %>
    </div>
  </dvi>
</div>
